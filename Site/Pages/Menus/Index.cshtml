@page
@model Site.Pages.Menus.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meniu</h1>

<p>
    <a asp-page="Create">Produs nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].NumeProdus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Descriere)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeProdus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
           
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProdusId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProdusId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProdusId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
