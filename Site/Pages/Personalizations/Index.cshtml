@page
@model Site.Pages.Personalizations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Personalizări</h1>

<p>
    <a asp-page="Create">Personalizare nouă</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personalization[0].NumePersonalizare)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Personalization) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumePersonalizare)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
